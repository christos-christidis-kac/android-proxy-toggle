<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kinandcarta.create.proxytoggle.widget">

    <application>
        <!-- Home Screen Widget -->
        <receiver
            android:name=".ToggleWidgetReceiver"
            android:exported="false"
            android:permission="com.kinandcarta.create.proxytoggle.PRIVATE_PERMISSION">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="ACTION_TOGGLE_PROXY" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/toggle_widget" />
        </receiver>
    </application>
</manifest>